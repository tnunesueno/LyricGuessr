<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lyricguessr.Playview">
   <children>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="300.0" spacing="50.0" style="-fx-background-color: white;">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Complete the lyrics: ">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Text>
            <Text fx:id="lyricText" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="250.0" />
            <TextField fx:id="input" onAction="#check" />
            <Text fx:id="incorrect" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="112.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
